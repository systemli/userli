{% extends 'base_step.html.twig' %}

{% block title %}{{ domain }} - {{ "recovery.header"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block step_title %}{{ "recovery.header"|trans }}{% endblock %}

{% block step_description %}
    <p class="text-gray-600">{{ "recovery.lead"|trans }}</p>
{% endblock %}

{% block step_icon %}
    <div class="w-16 h-16 bg-yellow-100 rounded-xl flex items-center justify-center">
        <!-- Heroicon: key -->
        <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
        </svg>
    </div>
{% endblock %}

{% block step_content %}
    {% block recovery_content %}
    {% endblock %}
{% endblock %}
