{% extends 'Recovery/recovery.html.twig' %}

{% block recovery_content %}
    <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="flex">
            {# Heroicon: check-circle (solid) #}
            <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <div class="text-sm text-green-800">
                <p>{{ "recovery.started"|trans }}</p>
                <p class="mt-2">{{ "recovery.waiting-info"|trans }}</p>
            </div>
        </div>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
            {# Heroicon: clock (solid) #}
            <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
            <div class="text-sm font-medium text-blue-800">
                {{ "recovery.waiting-time"|trans({'%time%': active_time|date("d.m.Y")}) }}
            </div>
        </div>
    </div>

    <div class="mt-6 flex justify-center">
        <a href="{{ url('index') }}"
           class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
            {{ "error.back_link"|trans }}
        </a>
    </div>
{% endblock %}
