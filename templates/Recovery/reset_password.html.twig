{% extends 'base_step.html.twig' %}

{% block title %}{{ setting('app_name') }} - {{ "recovery.header"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block step_title %}{{ "recovery.header"|trans }}{% endblock %}

{% block step_description %}
    <p class="text-gray-600 dark:text-gray-300">
        {{ "recovery.reset-lead"|trans }}
    </p>
{% endblock %}

{% block step_icon %}
    <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center">
        <!-- Heroicon: key -->
        {{ ux_icon('heroicons:key', {'class': 'w-8 h-8 text-blue-600 dark:text-blue-400'}) }}
    </div>
{% endblock %}

{% block step_content %}
    <div class="mb-6 bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
        <div class="flex">
            {{ ux_icon('heroicons:information-circle-solid', {'class': 'w-5 h-5 text-blue-500 dark:text-blue-400 mt-0.5 mr-3 flex-shrink-0'}) }}
            <div class="text-sm text-blue-800 dark:text-blue-200">
                <p class="font-medium mb-2">{{ "registration.information"|trans }}</p>
                <p class="font-bold mb-2">{{ "recovery.information-extra"|trans|safe_html }}</p>
                <p>{{ "account.password.help"|trans|safe_html }}</p>
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    {{ form_errors(form) }}

    <div class="space-y-4">
        <div data-controller="password-strength"
             data-password-strength-strong-label-value="{{ "form.password-strong"|trans }}"
             data-password-strength-min-length-value="12"
             data-password-strength-min-length-label-value="{{ "form.password-min-length"|trans({'%min%': 12}) }}"
        >
            {{ form_label(form.password.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
            {{ form_errors(form.password.first) }}
            {{ form_widget(form.password.first, {'attr': {'data-password-strength-target': 'input', 'data-action': 'focus->password-strength#loadAndEvaluate:once input->password-strength#evaluate', 'autocomplete': 'new-password'}}) }}
            {# Password strength meter #}
            <div class="flex gap-1 mt-2" data-password-strength-meter aria-hidden="true">
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
            </div>
            <p class="text-xs text-gray-500 dark:text-gray-400 hidden mt-1" data-password-strength-target="feedback" aria-live="polite"></p>
        </div>

        <div>
            {{ form_label(form.password.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
            {{ form_errors(form.password.second) }}
            {{ form_widget(form.password.second, {'attr': {'autocomplete': 'new-password'}}) }}
        </div>
    </div>

    <div class="mt-6">
        {{ form_widget(form.submit, {
            'attr': {
                'class': 'w-full'
            }
        }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
