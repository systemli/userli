{% extends 'base.html.twig' %}

{% block subtitle %}{{ "recovery.header"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
            <h2 class="form-signin-heading">{{ "recovery.header"|trans }}</h2>
            <p class="lead">{{ "recovery.reset-lead"|trans }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-3 col-md-4">
            <div class="alert alert-info">
                <p class="lead">{{ "registration.information"|trans }}</p>
                <p><strong>{{ "recovery.information-extra"|trans|raw }}</strong></p>
                <p>{{ "registration.information-password-policy"|trans|raw }}</p>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.plainPassword.first) }}
                {{ form_errors(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' }}) }}

                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' }}) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary' }}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
