{% extends 'base_step.html.twig' %}

{% block title %}{{ domain }} - {{ "recovery.header"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block step_title %}{{ "recovery.header"|trans }}{% endblock %}

{% block step_description %}
    <p class="text-gray-600 dark:text-gray-300">
        {{ "recovery.reset-lead"|trans }}
    </p>
{% endblock %}

{% block step_icon %}
    <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center">
        <!-- Heroicon: key -->
        {{ ux_icon('heroicons:key', {'class': 'w-8 h-8 text-blue-600 dark:text-blue-400'}) }}
    </div>
{% endblock %}

{% block step_content %}
    <div class="mb-6 bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
        <div class="flex">
            {{ ux_icon('heroicons:information-circle-solid', {'class': 'w-5 h-5 text-blue-500 dark:text-blue-400 mt-0.5 mr-3 flex-shrink-0'}) }}
            <div class="text-sm text-blue-800 dark:text-blue-200">
                <p class="font-medium mb-2">{{ "registration.information"|trans }}</p>
                <p class="font-bold mb-2">{{ "recovery.information-extra"|trans|raw }}</p>
                <p>{{ "account.password.help"|trans|raw }}</p>
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    {{ form_errors(form) }}

    <div class="space-y-4">
        <div>
            {{ form_label(form.password.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
            {{ form_errors(form.password.first) }}
            {{ form_widget(form.password.first) }}
        </div>

        <div>
            {{ form_label(form.password.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
            {{ form_errors(form.password.second) }}
            {{ form_widget(form.password.second) }}
        </div>
    </div>

    <div class="mt-6">
        {{ form_widget(form.submit, {
            'attr': {
                'class': 'w-full'
            }
        }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
