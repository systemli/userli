{# Parameters: icon (e.g. 'heroicons:key'), icon_color (e.g. 'blue', 'amber', 'indigo'), heading_key, description_key #}
<div class="flex items-center mb-6">
    <div class="w-12 h-12 bg-{{ icon_color }}-100 dark:bg-{{ icon_color }}-900/50 rounded-xl flex items-center justify-center mr-4">
        {{ ux_icon(icon, {class: 'w-6 h-6 text-' ~ icon_color ~ '-600 dark:text-' ~ icon_color ~ '-400'}) }}
    </div>
    <div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{{ heading_key|trans }}</h3>
        <p class="text-sm text-gray-500 dark:text-gray-300 mt-1">{{ description_key|trans }}</p>
    </div>
</div>
