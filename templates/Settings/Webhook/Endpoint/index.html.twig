{% extends 'base_page.html.twig' %}
{% block title %}{{ domain }} - {{ 'settings.webhook.title'|trans }}{% endblock %}
{% block page_title %}{{ 'settings.title'|trans }}{% endblock %}
{% block page_subtitle %}{{ 'settings.subtitle'|trans }}{% endblock %}
{% block page_content %}
    <div class="max-w-5xl mx-auto">
        {% include 'Settings/_navigation.html.twig' with {'current_section': 'webhooks'} %}
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm">
            <div class="p-6 sm:p-8">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
                        {{ ux_icon('heroicons:cursor-arrow-rays', {class: 'w-6 h-6 text-blue-600'}) }}
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900">{{ 'settings.webhook.table.title'|trans }}</h3>
                        <p class="text-sm text-gray-500 mt-1">{{ 'settings.webhook.table.description'|trans }}</p>
                    </div>
                </div>
                <div class="mb-6">
                    <a href="{{ path('settings_webhook_endpoint_create') }}"
                       class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                        {{ ux_icon('heroicons:plus', {class: 'w-4 h-4 mr-2'}) }}
                        {{ 'settings.webhook.create.button'|trans }}
                    </a>
                </div>
                {% if endpoints is empty %}
                    <div class="text-center py-12">
                        {{ ux_icon('heroicons:cursor-arrow-rays', {class: 'w-16 h-16 mx-auto mb-4 text-gray-300'}) }}
                        <h3 class="text-lg font-medium text-gray-900 mb-2">{{ 'settings.webhook.table.empty-title'|trans }}</h3>
                        <p class="text-gray-500 max-w-md mx-auto">{{ 'settings.webhook.table.empty-description'|trans }}</p>
                    </div>
                {% else %}
                    <div class="overflow-hidden">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.table.id'|trans }}</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.table.url'|trans }}</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.table.events'|trans }}</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.table.enabled'|trans }}</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.api.table.actions'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                {% for endpoint in endpoints %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 text-sm font-mono">{{ endpoint.id }}</td>
                                        <td class="px-6 py-4 text-sm font-mono break-all">{{ endpoint.url|e }}</td>
                                        <td class="px-6 py-4">
                                            <div class="flex flex-wrap gap-1">
                                                {% for event in endpoint.events %}
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">{{ event }}</span>
                                                {% endfor %}
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">{% if endpoint.enabled %}<span
                                                    class="text-green-600 font-medium">{{ 'settings.webhook.enabled'|trans }}</span>{% else %}
                                                <span class="text-gray-400">{{ 'settings.webhook.disabled'|trans }}</span>{% endif %}
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <div class="flex justify-end gap-2">
                                                <a href="{{ path('settings_webhook_delivery_index', {id: endpoint.id}) }}"
                                                   class="inline-flex items-center px-3 py-1.5 text-indigo-600 hover:text-indigo-700 hover:bg-indigo-50 rounded-md transition-colors">
                                                    {{ ux_icon('heroicons:paper-airplane', {class: 'w-4 h-4 mr-1'}) }} {{ 'settings.webhook.actions.deliveries'|trans }}
                                                </a>
                                                <a href="{{ path('settings_webhook_endpoint_edit', {id: endpoint.id}) }}"
                                                   class="inline-flex items-center px-3 py-1.5 text-indigo-600 hover:text-indigo-700 hover:bg-indigo-50 rounded-md transition-colors">
                                                    {{ ux_icon('heroicons:pencil-square', {class: 'w-4 h-4 mr-1'}) }} {{ 'settings.webhook.actions.edit'|trans }}
                                                </a>
                                                <form method="post"
                                                      action="{{ path('settings_webhook_endpoint_delete', {id: endpoint.id}) }}"
                                                      onsubmit="return confirm('{{ 'settings.webhook.delete.confirm'|trans({'%url%': endpoint.url|e('js')}) }}');">
                                                    <input type="hidden" name="_token"
                                                           value="{{ csrf_token('delete_webhook_endpoint_' ~ endpoint.id) }}">
                                                    <button type="submit"
                                                            class="inline-flex items-center px-3 py-1.5 text-red-600 hover:text-red-700 hover:bg-red-50 rounded-md transition-colors">
                                                        {{ ux_icon('heroicons:trash', {class: 'w-4 h-4 mr-1'}) }} {{ 'settings.webhook.actions.delete'|trans }}
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
