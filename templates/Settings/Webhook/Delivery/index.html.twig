{% extends 'base_page.html.twig' %}
{% block title %}{{ domain }} - {{ 'settings.webhook.deliveries.title'|trans }}{% endblock %}
{% block page_title %}{{ 'settings.title'|trans }}{% endblock %}
{% block page_subtitle %}{{ 'settings.subtitle'|trans }}{% endblock %}
{% block page_content %}
    <div class="max-w-5xl mx-auto">
        {% include 'Settings/_navigation.html.twig' with {'current_section': 'webhooks'} %}
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm">
            <div class="p-6 sm:p-8">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mr-4">
                        {{ ux_icon('heroicons:paper-airplane', {class: 'w-6 h-6 text-indigo-600'}) }}
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900">{{ 'settings.webhook.deliveries.heading'|trans }}</h3>
                        <p class="text-sm text-gray-500 mt-1">{{ 'settings.webhook.deliveries.subtitle'|trans }}</p>
                    </div>
                </div>
                <div class="mb-4">
                    <a href="{{ path('settings_webhook_endpoint_index') }}"
                       class="inline-flex items-center px-3 py-1.5 text-sm text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                        {{ ux_icon('heroicons:arrow-left', {class: 'w-4 h-4 mr-1'}) }} {{ 'settings.webhook.actions.back'|trans }}
                    </a>
                </div>
                <div class="overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.deliveries.table.id'|trans }}</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.deliveries.table.event'|trans }}</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.deliveries.table.status'|trans }}</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.deliveries.table.dispatched'|trans }}</th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'settings.webhook.deliveries.table.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                            {% for delivery in deliveries %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 text-sm font-mono break-all">{{ delivery.id }}</td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">{{ delivery.type }}</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        {% if delivery.success %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">{{ 'settings.webhook.deliveries.status.delivered'|trans }}</span>
                                        {% elseif delivery.error %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">{{ 'settings.webhook.deliveries.status.failed'|trans }}</span>
                                        {% else %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">{{ 'settings.webhook.deliveries.status.pending'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 text-sm">
                                        {{ delivery.dispatchedTime|date('H:i:s') }}
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex justify-end gap-2">
                                            <a href="{{ path('settings_webhook_delivery_show', {id: delivery.id}) }}"
                                               class="inline-flex items-center px-3 py-1.5 text-indigo-600 hover:text-indigo-700 hover:bg-indigo-50 rounded-md transition-colors">
                                                {{ ux_icon('heroicons:eye', {class: 'w-4 h-4 mr-1'}) }} {{ 'settings.webhook.deliveries.detail.action'|trans }}
                                            </a>
                                            {% if delivery.error and not delivery.success %}
                                                <form method="post"
                                                      action="{{ path('settings_webhook_delivery_retry', {id: delivery.id}) }}"
                                                      onsubmit="return confirm('{{ 'settings.webhook.deliveries.retry.confirm'|trans }}')">
                                                    <input type="hidden" name="_token"
                                                           value="{{ csrf_token('retry_delivery_' ~ delivery.id) }}">
                                                    <button class="inline-flex items-center px-3 py-1.5 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">{{ ux_icon('heroicons:arrow-path', {class: 'w-4 h-4 mr-1'}) }} {{ 'settings.webhook.deliveries.retry.action'|trans }}</button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5"
                                        class="px-6 py-6 text-center text-sm text-gray-500">{{ 'settings.webhook.deliveries.empty'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
