{% extends 'base_page.html.twig' %}
{% block title %}{{ setting('app_name') }} - {{ 'settings.domain.title'|trans }}{% endblock %}
{% block page_title %}{{ 'settings.title'|trans }}{% endblock %}
{% block page_subtitle %}{{ 'settings.subtitle'|trans }}{% endblock %}
{% block page_content %}
    <div class="max-w-5xl mx-auto">
        {% include 'Settings/_navigation.html.twig' with {'current_section': 'domains'} %}
        <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
            <div class="p-6 sm:p-8">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/50 rounded-xl flex items-center justify-center mr-4">
                        {{ ux_icon('heroicons:globe-alt', {class: 'w-6 h-6 text-indigo-600 dark:text-indigo-400'}) }}
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{{ 'settings.domain.heading'|trans }}</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-300 mt-1">{{ 'settings.domain.description'|trans }}</p>
                    </div>
                </div>

                <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="flex flex-wrap items-center gap-2">
                        <a href="{{ path('settings_domain_create') }}"
                           class="inline-flex items-center px-4 py-2 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors">
                            {{ ux_icon('heroicons:plus', {class: 'w-4 h-4 mr-2'}) }}
                            {{ 'settings.domain.create.button'|trans }}
                        </a>
                    </div>

                    <form method="get" action="{{ path('settings_domain_index') }}" class="flex items-center gap-2">
                        <div class="relative">
                            <input type="text" name="search" value="{{ search }}"
                                   placeholder="{{ 'settings.domain.search.placeholder'|trans }}"
                                   class="pl-10 pr-4 py-2 text-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                {{ ux_icon('heroicons:magnifying-glass', {class: 'w-4 h-4 text-gray-400'}) }}
                            </div>
                        </div>
                        <button type="submit"
                                class="inline-flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
                            {{ 'settings.domain.search.submit'|trans }}
                        </button>
                        {% if search %}
                            <a href="{{ path('settings_domain_index') }}"
                               class="inline-flex items-center px-3 py-2 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors">
                                {{ ux_icon('heroicons:x-mark', {class: 'w-4 h-4'}) }}
                            </a>
                        {% endif %}
                    </form>
                </div>

                {% if domains is empty %}
                    <div class="text-center py-12">
                        {{ ux_icon('heroicons:globe-alt', {class: 'w-16 h-16 mx-auto mb-4 text-gray-300 dark:text-gray-600'}) }}
                        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">{{ 'settings.domain.table.empty-title'|trans }}</h3>
                        <p class="text-gray-500 dark:text-gray-300 max-w-md mx-auto">{{ 'settings.domain.table.empty-description'|trans }}</p>
                    </div>
                {% else %}
                    <div class="overflow-hidden">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                                <thead class="bg-gray-50 dark:bg-gray-700">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">{{ 'settings.domain.table.name'|trans }}</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">{{ 'settings.domain.table.created'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                                {% for domain in domains %}
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">
                                            <a href="{{ path('settings_domain_show', {id: domain.id}) }}"
                                               class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 hover:underline">
                                                {{ domain.name }}
                                            </a>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-300">
                                            {{ domain.creationTime|date('Y-m-d H:i') }}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {% if totalPages > 1 %}
                        <div class="mt-6 flex items-center justify-between border-t border-gray-200 dark:border-gray-700 pt-4">
                            <div class="text-sm text-gray-500 dark:text-gray-400">
                                {{ 'settings.domain.pagination.total'|trans({'%count%': total}) }}
                            </div>
                            <div class="flex gap-2">
                                {% if page > 1 %}
                                    <a href="{{ path('settings_domain_index', {page: page - 1, search: search}|filter(v => v)) }}"
                                       class="inline-flex items-center px-3 py-1.5 text-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600">
                                        {{ ux_icon('heroicons:chevron-left', {class: 'w-4 h-4 mr-1'}) }} {{ 'settings.domain.pagination.previous'|trans }}
                                    </a>
                                {% endif %}
                                <span class="inline-flex items-center px-3 py-1.5 text-sm text-gray-500 dark:text-gray-400">
                                    {{ 'settings.domain.pagination.page'|trans({'%page%': page, '%totalPages%': totalPages}) }}
                                </span>
                                {% if page < totalPages %}
                                    <a href="{{ path('settings_domain_index', {page: page + 1, search: search}|filter(v => v)) }}"
                                       class="inline-flex items-center px-3 py-1.5 text-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600">
                                        {{ 'settings.domain.pagination.next'|trans }} {{ ux_icon('heroicons:chevron-right', {class: 'w-4 h-4 ml-1'}) }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
