    {% set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200')|trim
