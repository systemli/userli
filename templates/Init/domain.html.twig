{% extends 'base.html.twig' %}

{% form_theme form 'Form/fields.html.twig' %}

{% block title %}{{ domain }} - {{ "init.title"|trans }}{% endblock %}

{% block content %}
    <div class="min-h-[calc(100vh-8rem)] py-6 sm:py-8">
        <div class="max-w-4xl mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Left column: Information -->
                <div class="lg:pr-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ "init.title"|trans }}</h1>

                    <div class="prose prose-gray max-w-none">
                        <p class="text-lg text-gray-600 mb-4">{{ "init_domain.lead"|trans }}</p>
                        <p class="text-gray-700">{{ "init_domain.text"|trans }}</p>
                    </div>
                </div>

                <!-- Right column: Form -->
                <div class="lg:pl-8">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
                        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        {{ form_errors(form) }}

                        <div>
                            {{ form_label(form.domain, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_errors(form.domain) }}
                            {{ form_widget(form.domain) }}
                        </div>

                        <div class="pt-4">
                            {{ form_widget(form.submit, {
                                'attr': {
                                    'class': 'w-full'
                                }
                            }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
