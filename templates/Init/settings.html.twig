{% extends 'base.html.twig' %}

{% form_theme form 'Form/fields.html.twig' %}

{% block title %}{{ domain }} - {{ "init.title"|trans }}{% endblock %}

{% block content %}
    <div class="min-h-[calc(100vh-8rem)] py-6 sm:py-8">
        <div class="max-w-5xl mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Left column: Information (1/3) -->
                <div class="lg:col-span-1">
                    <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ "init.title"|trans }}</h1>

                    <div class="prose prose-gray max-w-none">
                        <p class="text-lg text-gray-600 mb-4">{{ "init_settings.lead"|trans }}</p>
                        <p class="text-gray-700">{{ "init_settings.text"|trans }}</p>
                    </div>

                    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <!-- heroicons:information-circle -->
                                {{ ux_icon('heroicons:information-circle', {class: 'w-5 h-5 text-blue-600'}) }}
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-blue-700">
                                    {{ "init_settings.info"|trans }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right column: Form (2/3) -->
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
                        <div class="flex items-center mb-6">
                            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
                                <!-- heroicons:cog-6-tooth -->
                                {{ ux_icon('heroicons:cog-6-tooth', {class: 'w-6 h-6 text-blue-600'}) }}
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold text-gray-900">{{ "init_settings.form.title"|trans }}</h3>
                                <p class="text-sm text-gray-500 mt-1">{{ "init_settings.form.description"|trans }}</p>
                            </div>
                        </div>

                        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                            {{ form_errors(form) }}

                            {# Group settings by category #}
                            {% set categories = {
                                'app': ['app_name', 'app_url'],
                                'project': ['project_name', 'project_url'],
                                'email': ['email_sender_address', 'email_notification_address'],
                            } %}

                            {% for category, fields in categories %}
                                <div class="space-y-4 {% if not loop.last %}border-b border-gray-200 pb-6 mb-6{% endif %}">
                                    <div class="flex items-center mb-3">
                                        {% set category_icon = {
                                            'app': 'heroicons:computer-desktop',
                                            'project': 'heroicons:building-office',
                                            'email': 'heroicons:envelope',
                                        }[category] %}

                                        <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center mr-3">
                                            {{ ux_icon(category_icon, {class: 'w-4 h-4 text-gray-600'}) }}
                                        </div>
                                        <h4 class="text-base font-medium text-gray-900">
                                            {{ ("settings.form.category." ~ category)|trans }}
                                        </h4>
                                    </div>

                                    <div class="space-y-4">
                                        {% for fieldName in fields %}
                                            {% if form[fieldName] is defined %}
                                                <div class="space-y-2">
                                                    {{ form_label(form[fieldName], null, {
                                                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
                                                    }) }}
                                                    {{ form_errors(form[fieldName]) }}
                                                    {{ form_widget(form[fieldName]) }}
                                                    <p class="mt-1 text-xs text-gray-500">{{ ("settings.form." ~ fieldName ~ ".help")|trans }}</p>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}

                            {# Submit Button #}
                            <div class="pt-4">
                                {{ form_widget(form.save, {
                                    'attr': {
                                        'class': 'w-full'
                                    }
                                }) }}
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
