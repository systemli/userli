{% extends 'base.html.twig' %}

{% block subtitle %}{{ "error.title"|trans }}{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-default navbar-static-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                {% block brand %}
                    <a class="navbar-brand" href="https://www.{{ domain }}">{{ domain }}</a>
                {% endblock %}
            </div>

            <div class="navbar-collapse">
                {% block menu %}
                    {# Einfaches Menü für Exception-Seiten - keine komplexe Logik %}
                {% endblock %}
            </div>
        </div>
    </nav>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>{{ "error.title"|trans }}</h1>
            {% if status_code == 404 %}
            <p class="lead">{{ "error.page_not_found"|trans }}</p>
            {% else %}
            <p class="lead">{{ "error.generic_error"|trans }}</p>
            {% endif %}
            <p><a class="btn btn-primary" href="{{ url('start') }}">{{ "error.back_link"|trans }}</a></p>
        </div>
    </div>
{% endblock %}
