<!DOCTYPE html>
<html lang="{{ app.request.locale|default('en') }}" class="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% if domain is defined %}{{ domain }} - {% endif %}{{ "error.title"|trans|default("Oops, an error occurred.") }}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        })();
    </script>
</head>
<body class="bg-gray-50 dark:bg-gray-900">
    <div class="min-h-screen flex flex-col items-center justify-center px-4">
        <div class="max-w-md text-center">
            {# Error icon and title #}
            <div class="mb-8">
                {# Heroicons: exclamation-triangle #}
                <div class="w-24 h-24 mx-auto mb-6 bg-red-100 dark:bg-red-900/50 rounded-xl flex items-center justify-center">
                    {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-12 h-12 text-red-600 dark:text-red-400'}) }}
                </div>
                <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
                    {{ "error.title"|trans|default("Oops, an error occurred.") }}
                </h1>
            </div>

            {# Error message #}
            <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
                {{ "error.generic_error"|trans|default("An error occurred. We're sorry.") }}
            </p>

            {# Status code display if available #}
            {% if status_code is defined and status_code %}
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-8">
                    Error {{ status_code }}
                </p>
            {% endif %}

            {# Back to home button #}
            <a href="/"
               class="inline-flex items-center px-6 py-3 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors duration-200">
                {# Heroicons: arrow-left #}
                {{ ux_icon('heroicons:arrow-left', {'class': 'w-5 h-5 mr-2'}) }}
                {{ "error.back_link"|trans|default("Back to home") }}
            </a>
        </div>
    </div>
</body>
</html>
