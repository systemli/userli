{% extends 'base_step.html.twig' %}

{% block title %}{{ setting('app_name') }} - {{ "registration.recovery-token-headline"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block step_title %}{{ "registration.recovery-token-headline"|trans }}{% endblock %}

{% block step_icon %}
    <div class="w-16 h-16 bg-green-100 dark:bg-green-900/50 rounded-xl flex items-center justify-center">
        {{ ux_icon('heroicons:check-circle', {'class': 'w-8 h-8 text-green-600 dark:text-green-400'}) }}
    </div>
{% endblock %}

{% block step_description %}
    <p class="text-gray-600 dark:text-gray-300">
        {{ "recovery-token.created-info"|trans }}
    </p>
{% endblock %}

{% block step_content %}
    {% include 'Recovery/show_recovery_token.html.twig' %}

    <div class="mt-8">
        {% include 'Recovery/recovery_token_notes.html.twig' %}
    </div>
{% endblock %}
