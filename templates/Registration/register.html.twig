{% extends 'base_page.html.twig' %}



{% block title %}{{ registration_domain }} - {{ "form.register-header"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block page_title %}{{ "form.register-header"|trans }}{% endblock %}

{% block page_subtitle %}{{ "registration.title"|trans({'%project_name%': registration_domain}) }}{% endblock %}

{% block page_content %}
    <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">

            {# Information sidebar #}
            <div class="order-2 lg:order-1">
                <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl p-6 sm:p-8">
                    <div class="flex items-center mb-4">
                        {{ ux_icon('heroicons:shield-check', {'class': 'w-6 h-6 text-blue-500 dark:text-blue-400 mr-3 flex-shrink-0'}) }}
                        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
                            {{ "registration.information"|trans }}
                        </h2>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed mb-5">
                        {{ "registration.information-intro"|trans }}
                    </p>
                    <ul class="space-y-3">
                        <li class="flex items-start">
                            {{ ux_icon('heroicons:check-circle', {'class': 'w-5 h-5 text-green-500 dark:text-green-400 mt-0.5 mr-3 flex-shrink-0'}) }}
                            <span class="text-sm text-gray-700 dark:text-gray-300">{{ "registration.password-rule-length"|trans }}</span>
                        </li>
                        <li class="flex items-start">
                            {{ ux_icon('heroicons:check-circle', {'class': 'w-5 h-5 text-green-500 dark:text-green-400 mt-0.5 mr-3 flex-shrink-0'}) }}
                            <span class="text-sm text-gray-700 dark:text-gray-300">{{ "registration.password-rule-umlauts"|trans }}</span>
                        </li>
                        <li class="flex items-start">
                            {{ ux_icon('heroicons:check-circle', {'class': 'w-5 h-5 text-green-500 dark:text-green-400 mt-0.5 mr-3 flex-shrink-0'}) }}
                            <span class="text-sm text-gray-700 dark:text-gray-300">{{ "registration.password-rule-compromised"|trans }}</span>
                        </li>
                    </ul>
                </div>
            </div>

            {# Registration form card #}
            <div class="order-1 lg:order-2">
                <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl border border-gray-100 dark:border-gray-700 overflow-hidden">
                    {# Form section #}
                    <div class="px-4 py-6 sm:px-6 sm:py-8 lg:px-8">
                        {# Form errors with improved accessibility #}
                        {% if form.vars.errors|length > 0 %}
                            <div class="mb-6 p-4 rounded-lg bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800" role="alert" aria-live="polite">
                                <div class="flex items-start">
                                    {{ ux_icon('heroicons:x-circle', {'class': 'w-5 h-5 text-red-400 dark:text-red-500 mt-0.5 mr-3 flex-shrink-0'}) }}
                                    <div>
                                        <h3 class="text-sm font-medium text-red-800 dark:text-red-200 mb-1">{{ "form.errors-found"|trans }}</h3>
                                        <ul class="text-sm text-red-700 dark:text-red-300 space-y-1">
                                            {% for error in form.vars.errors %}
                                                <li>{{ error.message|trans }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {# Registration form with semantic HTML and accessibility features #}
                        {{ form_start(form, {
                            'attr': {
                                'class': 'space-y-6',
                                'novalidate': 'novalidate'
                            }
                        }) }}

                            {# Voucher info display (read-only) #}
                            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600">
                                <div class="flex items-center">
                                    {{ ux_icon('heroicons:ticket', {'class': 'w-5 h-5 text-blue-500 dark:text-blue-400 mr-3 flex-shrink-0'}) }}
                                    <div>
                                        <span class="text-xs font-medium text-gray-500 dark:text-gray-400">{{ "form.voucher"|trans }}</span>
                                        <p class="text-sm font-mono font-semibold text-gray-900 dark:text-gray-100">{{ voucher }}</p>
                                    </div>
                                </div>
                                {{ ux_icon('heroicons:check-circle', {'class': 'w-5 h-5 text-green-500 dark:text-green-400 flex-shrink-0'}) }}
                            </div>

                            {# Hidden voucher field for form submission #}
                            {{ form_widget(form.voucher) }}

                            {# Email field with domain suffix #}
                            <div class="space-y-2">
                                {{ form_label(form.email, null, {
                                    'label_attr': {
                                        'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'
                                    }
                                }) }}
                                <div class="relative">
                                    {{ form_widget(form.email, {
                                        'attr': {
                                            'suffix': '@' ~ registration_domain,
                                            'autocomplete': 'email',
                                            'autofocus': '',
                                            'aria-describedby': form.email.vars.errors|length > 0 ? 'email-error' : null
                                        }
                                    }) }}
                                </div>
                                {% if form.email.vars.errors|length > 0 %}
                                    <div id="email-error" class="text-sm text-red-600 dark:text-red-400 mt-1" role="alert">
                                        {% for error in form.email.vars.errors %}
                                            <p>{{ error.message|trans }}</p>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            {# Password fields #}
                            <div class="space-y-4">
                                {# First password field with strength meter #}
                                <div class="space-y-2"
                                     data-controller="password-strength"
                                     data-password-strength-strong-label-value="{{ "form.password-strong"|trans }}"
                                     data-password-strength-min-length-value="12"
                                     data-password-strength-min-length-label-value="{{ "form.password-min-length"|trans({'%min%': 12}) }}"
                                >
                                    {{ form_label(form.password.first, null, {
                                        'label_attr': {
                                            'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'
                                        }
                                    }) }}
                                    <div class="relative">
                                        {{ form_widget(form.password.first, {
                                            'attr': {
                                                'class': 'block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 bg-white dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400 sm:text-sm transition-colors duration-200' ~ (form.password.first.vars.errors|length > 0 ? ' border-red-300 dark:border-red-600 focus:ring-red-500 focus:border-red-500' : ''),
                                                'autocomplete': 'new-password',
                                                'data-password-strength-target': 'input',
                                                'data-action': 'focus->password-strength#loadAndEvaluate:once input->password-strength#evaluate',
                                                'aria-describedby': (form.password.first.vars.errors|length > 0 ? 'password-error' : '') ~ ' password-strength-feedback'
                                            }
                                        }) }}
                                    </div>
                                    {# Password strength meter #}
                                    <div class="flex gap-1 mt-2" data-password-strength-meter aria-hidden="true">
                                         <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                                        <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                                        <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                                        <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                                    </div>
                                    <p id="password-strength-feedback" class="text-xs text-gray-500 dark:text-gray-400 hidden" data-password-strength-target="feedback" aria-live="polite"></p>
                                    {% if form.password.first.vars.errors|length > 0 %}
                                        <div id="password-error" class="text-sm text-red-600 dark:text-red-400 mt-1" role="alert">
                                            {% for error in form.password.first.vars.errors %}
                                                <p>{{ error.message|trans }}</p>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>

                                {# Password confirmation field #}
                                <div class="space-y-2">
                                    {{ form_label(form.password.second, null, {
                                        'label_attr': {
                                            'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'
                                        }
                                    }) }}
                                    <div class="relative">
                                        {{ form_widget(form.password.second, {
                                            'attr': {
                                                'class': 'block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 bg-white dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400 sm:text-sm transition-colors duration-200' ~ (form.password.second.vars.errors|length > 0 ? ' border-red-300 dark:border-red-600 focus:ring-red-500 focus:border-red-500' : ''),
                                                'autocomplete': 'new-password',
                                                'aria-describedby': form.password.second.vars.errors|length > 0 ? 'password-confirm-error' : null
                                            }
                                        }) }}
                                    </div>
                                    {% if form.password.second.vars.errors|length > 0 %}
                                        <div id="password-confirm-error" class="text-sm text-red-600 dark:text-red-400 mt-1" role="alert">
                                            {% for error in form.password.second.vars.errors %}
                                                <p>{{ error.message|trans }}</p>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            {# Submit button #}
                            <div class="pt-4">
                                {{ form_widget(form.submit, {
                                    'attr': {
                                        'class': 'w-full flex justify-center py-3 px-4 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 dark:bg-blue-500 hover:bg-blue-700 dark:hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 dark:focus:ring-offset-gray-800 focus:ring-blue-500 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed'
                                    }
                                }) }}
                            </div>

                        {{ form_end(form) }}
                    </div>

                    {# Footer with login link #}
                    <div class="px-4 py-4 sm:px-6 sm:py-6 lg:px-8 bg-gray-50 dark:bg-gray-700 border-t border-gray-100 dark:border-gray-600">
                        <div class="text-center text-sm">
                            <span class="text-gray-600 dark:text-gray-300">{{ "form.have-account"|trans }}</span>
                            <a href="{{ path('login') }}" class="font-medium text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 transition-colors duration-200 ml-1">
                                {{ "form.signin"|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
