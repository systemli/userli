{% extends 'base_step.html.twig' %}

{% block title %}{{ setting('app_name') }} - {{ "form.signin-header"|trans }}{% endblock %}

{% block step_icon %}
    <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center">
        {{ ux_icon('heroicons:arrow-right-on-rectangle', {'class': 'w-6 h-6 text-blue-600 dark:text-blue-400'}) }}
    </div>
{% endblock %}

{% block step_title %}{{ "form.signin-header"|trans }}{% endblock %}

{% block step_description %}
    <p class="text-gray-600 dark:text-gray-300">
        {{ "form.signin-subtitle"|trans }}
    </p>
{% endblock %}

{% block step_content %}
    {# Error message with improved accessibility #}
    {% if error %}
        <div class="mb-6 p-4 rounded-lg bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800" role="alert" aria-live="polite">
            <div class="flex items-start">
                {{ ux_icon('heroicons:x-circle', {'class': 'w-5 h-5 text-red-400 dark:text-red-500 mt-0.5 mr-3 flex-shrink-0'}) }}
                <div>
                    <h3 class="text-sm font-medium text-red-800 dark:text-red-200 mb-1">{{ "form.auth-failed"|trans }}</h3>
                    <p class="text-sm text-red-700 dark:text-red-300">{{ error.message|trans }}</p>
                </div>
            </div>
        </div>
    {% endif %}

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        {{ form_row(form._username) }}
        {{ form_row(form._password) }}

        {# Remember me and forgot password in a row #}
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                {{ form_widget(form._remember_me) }}
                <label for="{{ form._remember_me.vars.id }}" class="ml-2 block text-sm text-gray-700 dark:text-gray-300 cursor-pointer">
                    {{ "form.remember-me"|trans }}
                </label>
            </div>
            <div class="text-sm">
                <a href="{{ path('recovery') }}" class="text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 focus:outline-none focus:underline transition-colors duration-200">
                    {{ "form.recovery-link"|trans }}
                </a>
            </div>
        </div>

        {{ form_widget(form.submit) }}
    {{ form_end(form) }}
{% endblock %}

{% block step_footer %}
    <div class="-mx-6 sm:-mx-8 -mb-6 sm:-mb-8 mt-8 px-6 py-4 sm:px-8 sm:py-6 bg-gray-50 dark:bg-gray-700 border-t border-gray-100 dark:border-gray-600">
        <div class="text-center text-sm">
            <span class="text-gray-600 dark:text-gray-300">{{ "form.no-account"|trans }}</span>
            <a href="{{ path('register') }}" class="font-medium text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 transition-colors duration-200 ml-1">
                {{ "form.create-account"|trans }}
            </a>
        </div>
    </div>
{% endblock %}
