{% extends 'base.html.twig' %}

{# Override title block to show full title in browser tab #}
{% block title %}{{ domain }} - {% block subtitle %}{% endblock %}{% endblock %}

{% block content %}
    <div class="min-h-[calc(100vh-8rem)] py-6 sm:py-8">
        <div class="max-w-6xl mx-auto px-4">
            {# Standard page header #}
            <div class="mb-8 sm:mb-12">
                <div class="text-center">
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">
                        {% block page_title %}{% endblock %}
                    </h1>
                    {% block page_subtitle %}
                        {% if block('_page_subtitle') is not empty %}
                            <p class="text-xl text-gray-600 font-medium">
                                {{ block('_page_subtitle')|raw }}
                            </p>
                        {% endif %}
                    {% endblock %}
                </div>
            </div>

            {# Main content area #}
            {% block page_content %}{% endblock %}
        </div>
    </div>
{% endblock %}
