{# Two-factor authentication information section - shared across all 2FA templates #}
<!-- Right column: Information -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
    <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
            {# Heroicon: information-circle #}
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900">{{ "account.twofactor.info-title"|trans }}</h2>
    </div>

    <div class="space-y-4">
        <div class="flex items-start">
            <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                {# Heroicon: lock-closed #}
                <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
            <p class="text-sm text-gray-700 leading-relaxed">{{ "account.twofactor.info-security"|trans }}</p>
        </div>

        <div class="flex items-start">
            <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                {# Heroicon: device-phone-mobile #}
                <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
            </div>
            <p class="text-sm text-gray-700 leading-relaxed">{{ "account.twofactor.info-simple"|trans }}</p>
        </div>

        <div class="flex items-start">
            <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                {# Heroicon: key #}
                <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1721 9z"></path>
                </svg>
            </div>
            <p class="text-sm text-gray-700 leading-relaxed">{{ "account.twofactor.info-backup"|trans }}</p>
        </div>
    </div>
</div>
