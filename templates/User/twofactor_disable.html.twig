{% extends 'base_page.html.twig' %}

{% block title %}{{ domain }} - {{ "account.twofactor.headline"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block page_title %}{{ "account.twofactor.headline"|trans }}{% endblock %}

{% block page_subtitle %}{{ "account.twofactor.lead"|trans }}{% endblock %}

{% block page_content %}
    <div class="max-w-6xl mx-auto">
        <div class="max-w-5xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Left column: 2FA Status and Disable Form -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
                            <!-- Heroicon name: outline/shield-check -->
                            {{ ux_icon('heroicons:shield-check', {'class': 'w-6 h-6 text-green-600'}) }}
                        </div>
                        <h2 class="text-xl font-semibold text-gray-900">
                            {{ "account.twofactor.disable-title"|trans }}
                        </h2>
                    </div>

                    <p class="text-gray-600 mb-6">
                        {{ "account.twofactor.disable-description"|trans }}
                    </p>

                    <!-- Disable Form -->
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    {{ form_errors(form) }}

                    <div>
                        {{ form_label(form.password, null, {
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
                        }) }}
                        {{ form_errors(form.password) }}
                        {{ form_widget(form.password, {
                            'attr': {
                                'placeholder': 'form.password'|trans,
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors duration-200'
                            }
                        }) }}
                    </div>

                    <div class="pt-4">
                        {{ form_widget(form.submit, {
                            'attr': {
                                'class': 'w-full px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors duration-200'
                            }
                        }) }}
                    </div>

                    {{ form_end(form) }}
                </div>

                <!-- Right column: Information -->
                {% include 'User/_twofactor_info.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
