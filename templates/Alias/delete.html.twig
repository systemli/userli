{% extends 'base.html.twig' %}

{% form_theme form 'Form/fields.html.twig' %}

{% block breadcrumbs %}
    {# No breadcrumbs for the delete page #}
{% endblock %}

{% block content %}
    <div class="max-w-lg mx-auto px-4">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                </div>
                <h1 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">
                    {{ "delete.alias.headline_generic"|trans }}
                </h1>
                <p class="text-gray-600">
                    {{ "delete.alias.lead_specific"|trans({'%alias%': alias.source})|raw }}
                </p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            {% set form_errors_content = form_errors(form) %}
            {% if form_errors_content and form_errors_content|trim|length > 0 %}
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex">
                        <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                        <div class="text-sm text-red-700">
                            {{ form_errors_content }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="space-y-4">
                <div>
                    {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {% set password_errors_content = form_errors(form.password) %}
                    {% if password_errors_content and password_errors_content|trim|length > 0 %}
                        <div class="text-sm text-red-600 mb-2">
                            {{ password_errors_content }}
                        </div>
                    {% endif %}
                    {{ form_widget(form.password, {
                        'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                            'placeholder': 'Password'|trans
                        }
                    }) }}
                </div>

                <div class="flex flex-col sm:flex-row gap-3 pt-4">
                    {{ form_widget(form.submit, {
                        'attr': {
                            'class': 'w-full sm:w-auto px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors duration-200'
                        }
                    }) }}
                    <a href="{{ path('aliases') }}"
                       class="w-full sm:w-auto px-6 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors duration-200 text-center">
                        {{ "delete.cancel"|trans }}
                    </a>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
