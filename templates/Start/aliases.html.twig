{% extends 'base.html.twig' %}

{% block subtitle %}{{ "start.aliases"|trans }}{% endblock %}



{% block content %}
    {# Modern alias management with Tailwind CSS, semantic HTML, and accessibility #}
    <div class="min-h-[calc(100vh-8rem)] py-6 sm:py-8">
        <div class="max-w-6xl mx-auto">
            {# Header section - centered title and subtitle #}
            <div class="mb-8 sm:mb-12">
                <div class="text-center">
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">
                        {{ "start.aliases"|trans }}
                    </h1>
                    <p class="text-xl text-gray-600 font-medium">
                        {{ "index.alias-subtitle"|trans }}
                    </p>
                </div>
            </div>

            {# Main content area #}
            <div class="max-w-5xl mx-auto">
                {# Brief motivational explanation #}
                <div class="mb-8 text-center">
                    <p class="text-lg text-gray-600 leading-relaxed max-w-3xl mx-auto">
                        {{ "index.alias-motivation"|trans|raw }}
                    </p>
                </div>

                <!-- Two Column Layout for Alias Types -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Custom Aliases Column -->
                    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow duration-200">
                        <div class="p-6 sm:p-8">
                            <div class="flex items-center mb-6">
                                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
                                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900">{{ "custom-aliases.title"|trans }}</h3>
                                    <p class="text-sm text-gray-500 mt-1">{{ "custom-aliases.subtitle"|trans({
                                        '%alias_limit_custom%': constant('App\\Handler\\AliasHandler::ALIAS_LIMIT_CUSTOM')
                                    }) }}</p>
                                </div>
                            </div>

                            {# Features, limitations and management hint for custom aliases #}
                            <div class="mb-6 space-y-3 h-56">
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "custom-aliases.feature-choose-name"|trans|raw }}</span>
                                </div>
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "custom-aliases.feature-easy-remember"|trans|raw }}</span>
                                </div>
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-amber-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "custom-aliases.limitation-permanent"|trans|raw }}</span>
                                </div>
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-amber-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.tx-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "custom-aliases.limitation-limited"|trans({
                                        '%alias_limit_custom%': constant('App\\Handler\\AliasHandler::ALIAS_LIMIT_CUSTOM')
                                    })|raw }}</span>
                                </div>

                                {# Management hint #}
                                <div class="mt-4 pt-3">
                                    <p class="text-sm text-gray-500">{{ "custom-aliases.management-hint"|trans|raw }}</p>
                                </div>
                            </div>

                            {# Form section with consistent height #}
                            <div class="mb-6 h-24 flex items-center">
                                {%  if alias_creation_custom %}
                                {{ form_start(custom_alias_form) }}
                                {% if form_errors(custom_alias_form) %}
                                    <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md">
                                        <div class="text-sm text-red-700">
                                            {{ form_errors(custom_alias_form) }}
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="mb-6">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        {{ "index.alias-custom-create"|trans }}
                                    </label>
                                    <div class="flex rounded-md shadow-sm">
                                        {{ form_widget(custom_alias_form.alias, {
                                            'attr': {
                                                'class': 'flex-1 min-w-0 px-3 py-2 border border-gray-300 rounded-l-md focus:ring-blue-500 focus:border-blue-500 focus:z-10 text-sm'
                                            }
                                        }) }}
                                        <span class="inline-flex items-center px-3 py-2 border-t border-b border-gray-300 bg-gray-50 text-gray-500 text-sm -ml-px">
                                            @{{ user_domain }}
                                        </span>
                                        {{ form_widget(custom_alias_form.submit, {
                                            'attr': {
                                                'class': '-ml-px px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-r-md border border-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors'
                                            }
                                        }) }}
                                    </div>
                                </div>
                                {{ form_end(custom_alias_form) }}
                            {% else %}
                                <div class="mb-6 p-4 bg-amber-50 border border-amber-200 rounded-md">
                                    <div class="flex">
                                        <svg class="w-5 h-5 text-amber-400 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                        </svg>
                                        <div>
                                            <h3 class="text-sm font-medium text-amber-800">{{ "index.alias-limit-reached"|trans }}</h3>
                                            <p class="text-sm text-amber-700 mt-1">
                                                {{ "index.alias-limit"|trans({
                                                    '%alias_limit%': constant('App\\Handler\\AliasHandler::ALIAS_LIMIT_CUSTOM'),
                                                    '%alias_type%': 'custom'|trans
                                                }) }} {{ "index.alias-deletion-custom"|trans }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            </div>

                            {# Alias list section - flexible height #}
                            <div class="space-y-2">
                                {%  if aliases_custom is empty %}
                                    <div class="text-center py-8 text-gray-500">
                                        <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M5 3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2H5zm0 2h10v7h-2l-1-2H8l-1 2H5V5z" clip-rule="evenodd"/>
                                        </svg>
                                        <p class="text-sm">{{ "index.alias-empty"|trans({'%alias_type%': 'custom'|trans}) }}</p>
                                    </div>
                                {%  else %}
                                    <h3 class="text-sm font-medium text-gray-700 mb-3">{{ "index.alias-active-custom"|trans }}</h3>
                                    {% for alias in aliases_custom %}
                                        <div class="flex items-center justify-between p-3 bg-gray-50 border border-gray-200 rounded-md gap-3">
                                            <span class="font-mono text-sm text-gray-900 truncate min-w-0 max-w-[calc(100%-80px)]" title="{{ alias.source }}">{{ alias.source }}</span>
                                            <button type="button"
                                                    class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-1 transition-colors flex-shrink-0"
                                                    data-button="copy-to-clipboard"
                                                    data-value="{{ alias.source }}"
                                                    title="{{ "copy-to-clipboard"|trans }}"
                                                    data-toggle="tooltip"
                                                    data-placement="top">
                                                <svg class="w-3 h-3 sm:mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z"/>
                                                    <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z"/>
                                                </svg>
                                                <span class="hidden sm:inline">{{ "copy-to-clipboard"|trans }}</span>
                                            </button>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Random Aliases Column -->
                    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow duration-200">
                        <div class="p-6 sm:p-8">
                            <div class="flex items-center mb-6">
                                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
                                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900">{{ "random-aliases.title"|trans }}</h3>
                                    <p class="text-sm text-gray-500 mt-1">{{ "random-aliases.subtitle"|trans({
                                        '%alias_limit_random%': constant('App\\Handler\\AliasHandler::ALIAS_LIMIT_RANDOM')
                                    }) }}</p>
                                </div>
                            </div>

                            {# Features, limitations and management hint for random aliases #}
                            <div class="mb-6 space-y-3 h-56">
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "random-aliases.feature-secure"|trans|raw }}</span>
                                </div>
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "random-aliases.feature-privacy"|trans|raw }}</span>
                                </div>
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "random-aliases.feature-deletable"|trans|raw }}</span>
                                </div>
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-amber-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700">{{ "random-aliases.limitation-random-name"|trans|raw }}</span>
                                </div>

                                {# Management hint #}
                                <div class="mt-4 pt-3">
                                    <p class="text-sm text-gray-500">{{ "random-aliases.management-hint"|trans|raw }}</p>
                                </div>
                            </div>

                            {# Form section with consistent height #}
                            <div class="mb-6 h-24 flex items-center">
                                {%  if alias_creation_random %}
                                {{ form_start(random_alias_form) }}
                                {% if form_errors(random_alias_form) %}
                                    <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md">
                                        <div class="text-sm text-red-700">
                                            {{ form_errors(random_alias_form) }}
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="mb-6">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        {{ "index.alias-random-generate"|trans }}
                                    </label>
                                    {{ form_widget(random_alias_form.submit, {
                                        'attr': {
                                            'class': 'w-full px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors'
                                        }
                                    }) }}
                                </div>
                                {{ form_end(random_alias_form) }}
                            {% else %}
                                <div class="mb-6 p-4 bg-amber-50 border border-amber-200 rounded-md">
                                    <div class="flex">
                                        <svg class="w-5 h-5 text-amber-400 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                        </svg>
                                        <div>
                                            <h3 class="text-sm font-medium text-amber-800">{{ "index.alias-limit-reached"|trans }}</h3>
                                            <p class="text-sm text-amber-700 mt-1">
                                                {{ "index.alias-limit"|trans({
                                                    '%alias_limit%': constant('App\\Handler\\AliasHandler::ALIAS_LIMIT_RANDOM'),
                                                    '%alias_type%': 'random'|trans
                                                }) }} {{ "index.alias-deletion-random"|trans }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            </div>

                            {# Alias list section - flexible height #}
                            <div class="space-y-2">
                                {%  if aliases_random is empty %}
                                    <div class="text-center py-8 text-gray-500">
                                        <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M5 3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2H5zm0 2h10v7h-2l-1-2H8l-1 2H5V5z" clip-rule="evenodd"/>
                                        </svg>
                                        <p class="text-sm">{{ "index.alias-empty"|trans({'%alias_type%': 'random'|trans}) }}</p>
                                    </div>
                                {%  else %}
                                    <h3 class="text-sm font-medium text-gray-700 mb-3">{{ "index.alias-active-random"|trans }}</h3>
                                    {% for alias in aliases_random %}
                                        <div class="flex items-center justify-between p-3 bg-gray-50 border border-gray-200 rounded-md gap-3">
                                            <span class="font-mono text-sm text-gray-900 truncate min-w-0 max-w-[calc(100%-120px)]" title="{{ alias.source }}">{{ alias.source }}</span>
                                            <div class="flex items-center space-x-2 flex-shrink-0">
                                                <button type="button"
                                                        class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-1 transition-colors"
                                                        data-button="copy-to-clipboard"
                                                        data-value="{{ alias.source }}"
                                                        title="{{ "copy-to-clipboard"|trans }}"
                                                        data-toggle="tooltip"
                                                        data-placement="top">
                                                    <svg class="w-3 h-3 sm:mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z"/>
                                                        <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z"/>
                                                    </svg>
                                                    <span class="hidden sm:inline">{{ "copy-to-clipboard"|trans }}</span>
                                                </button>
                                                <a href="{{ url('alias_delete', {'aliasId': alias.id}) }}"
                                                   class="inline-flex items-center px-2 py-1 text-xs font-medium text-red-700 bg-red-100 rounded hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-1 transition-colors"
                                                   title="{{ "alias.delete"|trans }}"
                                                   data-toggle="tooltip"
                                                   data-placement="top">
                                                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
