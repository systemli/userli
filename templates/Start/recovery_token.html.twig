{% if user.recoverySecretBox %}
    <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
            {{ ux_icon('heroicons:check-circle', {'class': 'w-6 h-6 text-green-600'}) }}
        </div>
        <h2 class="text-xl font-semibold text-gray-900">{{ "recovery-token.headline"|trans }}</h2>
    </div>
    <p class="text-gray-600 mb-6">{{ "recovery-token.lead"|trans }}</p>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6" role="status">
        <div class="flex">
            {{ ux_icon('heroicons:check-circle-solid', {'class': 'w-5 h-5 text-green-600 mt-0.5 mr-3'}) }}
            <div class="text-sm text-green-800">
                {{ "recovery-token.set"|trans }}
            </div>
        </div>
    </div>
{% else %}
    <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-yellow-100 rounded-xl flex items-center justify-center mr-4">
            {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-6 h-6 text-yellow-600'}) }}
        </div>
        <h2 class="text-xl font-semibold text-gray-900">{{ "recovery-token.headline"|trans }}</h2>
    </div>
    <p class="text-gray-600 mb-6">{{ "recovery-token.lead"|trans }}</p>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6" role="alert">
        <div class="flex">
            {{ ux_icon('heroicons:x-circle-solid', {'class': 'w-5 h-5 text-red-400 mt-0.5 mr-3'}) }}
            <div class="text-sm text-red-800">
                {{ "recovery-token.unset"|trans }}
            </div>
        </div>
    </div>
{% endif %}

<div class="flex justify-center sm:justify-start">
    <a href="{{ url('user_recovery_token') }}"
       class="px-5 py-2.5 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none transition-colors duration-200"
       aria-label="{{ "index.recovery-token-button"|trans }}"
       role="button">
        {{ "index.recovery-token-button"|trans }}
    </a>
</div>
