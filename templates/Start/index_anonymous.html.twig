{% extends 'base_page.html.twig' %}

{% block title %}{{ "start.title"|trans({'%domain%': domain}) }}{% endblock %}

{% block page_title %}{{ "start.title"|trans({'%domain%': domain}) }}{% endblock %}

{% block page_subtitle %}{{ "start.intro"|trans }}{% endblock %}

{% block page_content %}
    <div class="max-w-6xl mx-auto">
        {# Main content area #}
        <div class="max-w-5xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    {# Registration section #}
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 sm:p-8">
                        <div class="flex items-center mb-6">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                                {{ ux_icon('heroicons:user-plus', {'class': 'w-5 h-5 text-blue-600'}) }}
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900">{{ "start.registration-header"|trans }}</h2>
                        </div>

                        <p class="text-gray-600 mb-6">{{ "start.registration-text"|trans({'%domain%': domain}) }}</p>

                        <div class="flex justify-center sm:justify-start">
                            <a href="{{ path('register') }}"
                               class="px-5 py-3 text-gray-900 font-medium bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:outline-none focus:ring-4 focus:ring-gray-100 transition-colors duration-200"
                               aria-label="{{ "start.registration-button"|trans }}"
                               role="button">
                                {{ "start.registration-button"|trans }}
                            </a>
                        </div>
                    </div>

                    {# Login form section #}
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 sm:p-8">
                        <div class="flex items-center mb-6">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                                {{ ux_icon('heroicons:arrow-left-end-on-rectangle', {'class': 'w-5 h-5 text-blue-600'}) }}
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900">{{ "form.signin-header"|trans }}</h2>
                        </div>

                        <form role="form" action="{{ path('login') }}" method="post" class="space-y-4">
                            <div>
                                <label for="username" class="block text-sm font-medium text-gray-700 mb-2">{{ "form.email"|trans }}</label>
                                <input type="email"
                                       id="username"
                                       name="_username"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                                       placeholder="{{ "form.email"|trans }}"
                                       required
                                       autofocus />
                            </div>

                            <div>
                                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">{{ "form.password"|trans }}</label>
                                <input type="password"
                                       id="password"
                                       name="_password"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                                       placeholder="{{ "form.password"|trans }}"
                                       required />
                            </div>

                            <div>
                                <a href="{{ path('recovery') }}" class="text-blue-600 hover:text-blue-800 transition-colors duration-200">
                                    {{ "form.recovery-link"|trans }}
                                </a>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="pt-2">
                                <button type="submit"
                                        class="w-full px-5 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none transition-colors duration-200">
                                    {{ "form.signin"|trans }}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
