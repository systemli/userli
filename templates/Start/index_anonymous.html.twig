{% extends 'base_page.html.twig' %}

{% block title %}{{ "start.title"|trans({'%app_name%': setting('app_name')}) }}{% endblock %}

{% block page_title %}{{ "start.title"|trans({'%app_name%': setting('app_name')}) }}{% endblock %}

{% block page_subtitle %}{{ "start.intro"|trans }}{% endblock %}

{% block page_content %}
    <div class="max-w-6xl mx-auto">
        {# Main content area #}
        <div class="max-w-5xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    {# Registration section #}
                    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm p-6 sm:p-8">
                        <div class="flex items-center mb-6">
                            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center mr-4">
                                {{ ux_icon('heroicons:user-plus', {'class': 'w-5 h-5 text-blue-600 dark:text-blue-400'}) }}
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{{ "start.registration-header"|trans }}</h2>
                        </div>

                        {{ form_start(voucher_form, {'action': path('check_voucher'), 'attr': {'class': 'space-y-4', 'role': 'form'}}) }}
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ "start.registration-text"|trans }}</p>
                            {{ form_row(voucher_form.voucher) }}
                            <div class="pt-2">
                                {{ form_widget(voucher_form.submit) }}
                            </div>
                        {{ form_end(voucher_form) }}
                    </div>

                    {# Login form section #}
                    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm p-6 sm:p-8">
                        <div class="flex items-center mb-6">
                            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center mr-4">
                                {{ ux_icon('heroicons:arrow-left-end-on-rectangle', {'class': 'w-5 h-5 text-blue-600 dark:text-blue-400'}) }}
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{{ "form.signin-header"|trans }}</h2>
                        </div>

                        {{ form_start(login_form, {'attr': {'class': 'space-y-4', 'role': 'form'}}) }}
                            {{ form_row(login_form._username) }}
                            {{ form_row(login_form._password) }}

                            {# Remember me and forgot password in a row #}
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    {{ form_widget(login_form._remember_me) }}
                                    <label for="{{ login_form._remember_me.vars.id }}" class="ml-2 block text-sm text-gray-700 dark:text-gray-300 cursor-pointer">
                                        {{ "form.remember-me"|trans }}
                                    </label>
                                </div>
                                <div class="text-sm">
                                    <a href="{{ path('recovery') }}" class="text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 focus:outline-none focus:underline transition-colors duration-200">
                                        {{ "form.recovery-link"|trans }}
                                    </a>
                                </div>
                            </div>

                            <div class="pt-2">
                                {{ form_widget(login_form.submit) }}
                            </div>
                        {{ form_end(login_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
