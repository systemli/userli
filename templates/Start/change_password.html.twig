{% form_theme password_form 'Form/fields.html.twig' %}

<div class="flex items-center mb-6">
    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
        {{ ux_icon('heroicons:key', {class: 'w-6 h-6 text-blue-600'}) }}
    </div>
    <h2 class="text-xl font-semibold text-gray-900">{{ "form.change-password"|trans }}</h2>
</div>

{{ form_start(password_form, {'attr': {'class': 'space-y-6'}}) }}
{{ form_errors(password_form) }}

<div>
    {{ form_label(password_form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
    {{ form_errors(password_form.password) }}
    {{ form_widget(password_form.password, {
        'attr': {
            'placeholder': 'Password'|trans
        }
    }) }}
</div>

<div class="space-y-4">
    {{ form_label(password_form.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
    {{ form_errors(password_form.newPassword.first) }}
    {{ form_widget(password_form.newPassword.first, {
        'attr': {
            'placeholder': 'New password'|trans
        }
    }) }}

    {{ form_label(password_form.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2 mt-4'}}) }}
    {{ form_widget(password_form.newPassword.second, {
        'attr': {
            'placeholder': 'Confirm new password'|trans
        }
    }) }}
</div>

<div class="pt-4">
    {{ form_widget(password_form.submit) }}
</div>
{{ form_end(password_form) }}

<div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex">
        {{ ux_icon('heroicons:information-circle', {'class': 'w-5 h-5 text-blue-500 mt-0.5 mr-3'}) }}
        <div class="text-sm text-blue-800">
            <p class="font-medium">{{ "registration.information"|trans }}</p>
            <p class="mt-1">{{ "account.password.help"|trans|raw }}</p>
        </div>
    </div>
</div>
