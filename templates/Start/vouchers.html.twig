{% extends 'base.html.twig' %}

{% block subtitle %}{{ "start.vouchers"|trans }}{% endblock %}

{% block content %}
    {# Modern voucher management with Tailwind CSS, semantic HTML, and accessibility #}
    <div class="min-h-[calc(100vh-8rem)] py-6 sm:py-8">
        <div class="max-w-6xl mx-auto">
            {# Header section - centered title and subtitle #}
            <div class="mb-8 sm:mb-12">
                <div class="text-center">
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">
                        {{ "start.vouchers"|trans }}
                    </h1>
                    <p class="text-xl text-gray-600 font-medium">
                        {{ "index.voucher-subtitle"|trans }}
                    </p>
                </div>
            </div>

            {# Main content card #}
            <div class="max-w-4xl mx-auto">
                <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6 sm:p-8">
                    {# Explanation text #}
                    <div class="mb-6">
                        <p class="text-lg text-gray-600 leading-relaxed">
                            {{ "index.voucher-explanation-short"|trans }}
                        </p>
                    </div>
                    {# Voucher management section #}
                    <div class="space-y-6">
                        {% if domain == user_domain %}
                            {# Create voucher form for multipliers #}
                            {% if is_granted('ROLE_MULTIPLIER') %}
                                <div class="bg-gray-50 rounded-xl border border-gray-200 p-6">
                                    <h2 class="text-lg font-semibold text-gray-900 mb-4">
                                        {{ "form.create-voucher"|trans }}
                                    </h2>
                                    {{ form_start(voucher_form, {
                                        'attr': {
                                            'class': 'space-y-4'
                                        }
                                    }) }}
                                    
                                    {# Form errors #}
                                    {% if voucher_form.vars.errors|length > 0 %}
                                        <div class="p-4 rounded-lg bg-red-50 border border-red-200" role="alert" aria-live="polite">
                                            <div class="flex items-start">
                                                <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                                </svg>
                                                <div>
                                                    <ul class="text-sm text-red-700 space-y-1">
                                                        {% for error in voucher_form.vars.errors %}
                                                            <li>{{ error.message|trans }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}

                                    {{ form_widget(voucher_form.submit, {
                                        'attr': {
                                            'class': 'w-full flex justify-center py-3 px-4 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed'
                                        }
                                    }) }}
                                    {{ form_end(voucher_form) }}
                                </div>
                            {% endif %}

                            {# Voucher list #}
                            {% if vouchers is defined and vouchers|length > 0 %}
                                <div class="space-y-4">
                                    {% for voucher in vouchers|reverse %}
                                        {% if voucher.redeemed %}
                                            {# Redeemed voucher #}
                                            <div class="bg-amber-50 border border-amber-200 rounded-xl p-4" role="alert">
                                                <div class="flex items-start">
                                                    <svg class="w-5 h-5 text-amber-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    <div class="flex-1">
                                                        <p class="font-mono text-lg text-amber-800 line-through mb-1">
                                                            {{ voucher.code }}
                                                        </p>
                                                        <p class="text-sm text-amber-700">
                                                            {{ "form.voucher-redeemed-on"|trans }} {{ voucher.redeemedTime|date("d.m.Y") }}
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        {% else %}
                                            {# Active voucher #}
                                            <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                                                <div class="flex items-center justify-between">
                                                    <div class="flex items-center">
                                                        <svg class="w-5 h-5 text-green-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                                                        </svg>
                                                        <p class="font-mono text-lg text-green-800 font-semibold">
                                                            {{ voucher.code }}
                                                        </p>
                                                    </div>
                                                    <button type="button" 
                                                            class="inline-flex items-center px-3 py-2 border border-green-300 rounded-lg text-sm font-medium text-green-700 bg-white hover:bg-green-50 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors duration-200 cursor-pointer"
                                                            title="{{ "copy-to-clipboard"|trans }}"
                                                            data-button="copy-to-clipboard"
                                                            data-value="{{ url('register_voucher', {'voucher': voucher.code}) }}"
                                                            aria-label="{{ "copy-to-clipboard"|trans }}">
                                                        <svg class="w-4 h-4 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                                        </svg>
                                                        <span class="hidden sm:inline">{{ "copy-to-clipboard"|trans }}</span>
                                                    </button>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% elseif user.creationTime|date('U') <= '-7 days'|date('U') %}
                                {# Voucher limit reached #}
                                <div class="bg-blue-50 border border-blue-200 rounded-xl p-4" role="alert">
                                    <div class="flex items-start">
                                        <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                        </svg>
                                        <p class="text-sm text-blue-700">
                                            {{ "index.voucher-limit"|trans }}
                                        </p>
                                    </div>
                                </div>
                            {% else %}
                                {# Waiting period #}
                                <div class="bg-blue-50 border border-blue-200 rounded-xl p-4" role="alert">
                                    <div class="flex items-start">
                                        <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                        </svg>
                                        <p class="text-sm text-blue-700">
                                            {{ "index.voucher-disable"|trans({'%date%': user.creationTime|date_modify("+7 days")|date("d. F Y, H:i")}) }}
                                        </p>
                                    </div>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
