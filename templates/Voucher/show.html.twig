{% extends 'base_page.html.twig' %}

{% block title %}{{ setting('app_name') }} - {{ "start.vouchers"|trans }}{% endblock %}

{% block page_title %}{{ "start.vouchers"|trans }}{% endblock %}

{% block page_subtitle %}{{ "index.voucher-subtitle"|trans }}{% endblock %}

{% block page_content %}
    <div class="max-w-4xl mx-auto">
        {# Brief motivational explanation #}
        <div class="mb-8 text-center">
            <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed max-w-3xl mx-auto">
                {{ "index.voucher-explanation-short"|trans }}
            </p>
        </div>

        {# Main content card #}
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm p-6 sm:p-8">
            {# Voucher management section #}
            <div class="space-y-6">
                {% if domain == user_domain %}
                    {# Create voucher button for multipliers (only if vouchers exist) #}
                    {% if is_granted('ROLE_MULTIPLIER') and vouchers is defined and vouchers|length > 0 %}
                        <div class="flex justify-end">
                            {{ form_start(voucher_form, {
                                'attr': {
                                    'class': 'inline-block'
                                }
                            }) }}

                            {# Form errors (only show if there are errors) #}
                            {% if voucher_form.vars.errors|length > 0 %}
                                <div class="mb-4 p-3 rounded-lg bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800" role="alert" aria-live="polite">
                                    <div class="flex items-start">
                                        {{ ux_icon('heroicons:x-circle', {'class': 'w-4 h-4 text-red-400 dark:text-red-500 mt-0.5 mr-2 flex-shrink-0'}) }}
                                        <div>
                                            <ul class="text-xs text-red-700 dark:text-red-200 space-y-1">
                                                {% for error in voucher_form.vars.errors %}
                                                    <li>{{ error.message|trans }}</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            {{ form_widget(voucher_form.submit, {
                                'attr': {
                                    'class': 'inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 dark:bg-blue-500 hover:bg-blue-700 dark:hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 dark:focus:ring-offset-gray-800 focus:ring-blue-500 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed'
                                }
                            }) }}
                            {{ form_end(voucher_form) }}
                        </div>
                    {% endif %}

                            {# Voucher list #}
                            {% if vouchers is defined and vouchers|length > 0 %}
                                <div class="space-y-4">
                                    {% for voucher in vouchers|reverse %}
                                        {% if voucher.redeemed %}
                                            {# Redeemed voucher #}
                                            <div class="bg-amber-50 dark:bg-amber-900/30 border border-amber-200 dark:border-amber-800 rounded-xl p-4" role="alert">
                                                <div class="flex items-start">
                                                    {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-5 h-5 text-amber-400 dark:text-amber-500 mt-0.5 mr-3 flex-shrink-0'}) }}
                                                    <div class="flex-1">
                                                        <p class="font-mono text-lg text-amber-800 dark:text-amber-200 line-through mb-1">
                                                            {{ voucher.code }}
                                                        </p>
                                                        <p class="text-sm text-amber-700 dark:text-amber-300">
                                                            {{ "form.voucher-redeemed-on"|trans }} {{ voucher.redeemedTime|date("d.m.Y") }}
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        {% else %}
                                            {# Active voucher #}
                                            <div class="bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 rounded-xl p-4">
                                                <div class="flex items-center justify-between">
                                                    <div class="flex items-center">
                                                        {{ ux_icon('heroicons:link', {'class': 'w-5 h-5 text-green-400 dark:text-green-500 mr-3 flex-shrink-0'}) }}
                                                        <p class="font-mono text-lg text-green-800 dark:text-green-200 font-semibold">
                                                            {{ voucher.code }}
                                                        </p>
                                                    </div>
                                                    <button type="button"
                                                            class="inline-flex items-center p-2 border border-green-300 dark:border-green-700 rounded-lg text-sm font-medium text-green-700 dark:text-green-300 bg-white dark:bg-gray-800 hover:bg-green-50 dark:hover:bg-green-900/30 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors duration-200 cursor-pointer"
                                                            title="{{ "copy-to-clipboard"|trans }}"
                                                            data-controller="clipboard"
                                                            data-clipboard-content-value="{{ url('register_voucher', {'voucher': voucher.code}) }}"
                                                            data-action="clipboard#copy"
                                                            aria-label="{{ "copy-to-clipboard"|trans }}">
                                                        {{ ux_icon('heroicons:clipboard', {'class': 'w-4 h-4'}) }}
                                                    </button>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% elseif user.creationTime|date('U') > '-7 days'|date('U') and not is_granted('ROLE_MULTIPLIER') %}
                                {# Waiting period for regular users only #}
                                <div class="text-center py-8 text-gray-500 dark:text-gray-300">
                                    {{ ux_icon('heroicons:clock', {'class': 'w-12 h-12 mx-auto mb-3 text-gray-300 dark:text-gray-600'}) }}
                                    <p class="text-sm font-medium text-gray-900 dark:text-gray-100 mb-1">{{ "index.voucher-waiting-title"|trans }}</p>
                                    <p class="text-sm text-gray-600 dark:text-gray-300">
                                        {{ "index.voucher-disable"|trans({'%date%': user.creationTime|date_modify("+7 days")|date("d. F Y, H:i")}) }}
                                    </p>
                                </div>
                            {% elseif is_granted('ROLE_MULTIPLIER') %}
                                {# Empty state for multipliers with create button #}
                                <div class="text-center py-8 text-gray-500 dark:text-gray-300">
                                    {{ ux_icon('heroicons:adjustments-horizontal', {'class': 'w-12 h-12 mx-auto mb-3 text-gray-300 dark:text-gray-600'}) }}
                                    <p class="text-sm font-medium text-gray-900 dark:text-gray-100 mb-1">{{ "index.voucher-empty-title"|trans }}</p>
                                    <p class="text-sm text-gray-600 dark:text-gray-300 mb-6">{{ "index.voucher-empty-multiplier"|trans }}</p>

                                    {# Create voucher button in empty state #}
                                    {{ form_start(voucher_form, {
                                        'attr': {
                                            'class': 'inline-block'
                                        }
                                    }) }}

                                    {# Form errors (only show if there are errors) #}
                                    {% if voucher_form.vars.errors|length > 0 %}
                                        <div class="mb-4 p-3 rounded-lg bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800" role="alert" aria-live="polite">
                                            <div class="flex items-start">
                                                {{ ux_icon('heroicons:x-circle', {'class': 'w-4 h-4 text-red-400 dark:text-red-500 mt-0.5 mr-2 flex-shrink-0'}) }}
                                                <div>
                                                    <ul class="text-xs text-red-700 dark:text-red-200 space-y-1">
                                                        {% for error in voucher_form.vars.errors %}
                                                            <li>{{ error.message|trans }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}

                                    {{ form_widget(voucher_form.submit, {
                                        'attr': {
                                            'class': 'inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 dark:bg-blue-500 hover:bg-blue-700 dark:hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 dark:focus:ring-offset-gray-800 focus:ring-blue-500 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed'
                                        }
                                    }) }}
                                    {{ form_end(voucher_form) }}
                                </div>
                            {% else %}
                                {# Voucher limit reached for regular users #}
                                <div class="text-center py-8 text-gray-500 dark:text-gray-300">
                                    {{ ux_icon('heroicons:information-circle-solid', {'class': 'w-12 h-12 mx-auto mb-3 text-gray-300 dark:text-gray-600'}) }}
                                    <p class="text-sm font-medium text-gray-900 dark:text-gray-100 mb-1">{{ "index.voucher-limit-title"|trans }}</p>
                                    <p class="text-sm text-gray-600 dark:text-gray-300">{{ "index.voucher-limit"|trans }}</p>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
        </div>
    </div>
{% endblock %}
