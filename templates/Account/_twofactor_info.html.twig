{# Two-factor authentication information section - shared across all 2FA templates #}
<!-- Right column: Information -->
<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
    <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center mr-4">
            {{ ux_icon('heroicons:information-circle', {'class': 'w-6 h-6 text-blue-600 dark:text-blue-400'}) }}
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{{ "account.twofactor.info-title"|trans }}</h2>
    </div>

    <div class="space-y-4">
        <div class="flex items-start">
            <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                {{ ux_icon('heroicons:lock-closed', {'class': 'w-3 h-3 text-blue-600 dark:text-blue-400'}) }}
            </div>
            <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">{{ "account.twofactor.info-security"|trans }}</p>
        </div>

        <div class="flex items-start">
            <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                {{ ux_icon('heroicons:device-phone-mobile', {'class': 'w-3 h-3 text-blue-600 dark:text-blue-400'}) }}
            </div>
            <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">{{ "account.twofactor.info-simple"|trans }}</p>
        </div>

        <div class="flex items-start">
            <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                {{ ux_icon('heroicons:key', {'class': 'w-3 h-3 text-blue-600 dark:text-blue-400'}) }}
            </div>
            <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">{{ "account.twofactor.info-backup"|trans }}</p>
        </div>
    </div>
</div>
