{% extends 'base_step.html.twig' %}

{% form_theme form 'Form/fields.html.twig' %}

{# Do not show the password compromised notification in the password change template #}
{% block notifications %}{% endblock %}

{% block title %}{{ setting('app_name') }} - {{ "account.password.title"|trans }}{% endblock %}

{% block step_icon %}
    <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/50 rounded-xl flex items-center justify-center">
        {{ ux_icon('heroicons:key', {'class': 'w-6 h-6 text-blue-600 dark:text-blue-400'}) }}
    </div>
{% endblock %}

{% block step_title %}{{ "form.change-password"|trans }}{% endblock %}

{% block step_description %}
    <p class="text-gray-600 dark:text-gray-300">
        {{ "account.password.subtitle"|trans }}
    </p>
{% endblock %}

{% block step_content %}

    {% if user.passwordChangeRequired %}
        <div class="mb-6 bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4">
            <div class="flex items-start">
                {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-5 h-5 text-red-400 dark:text-red-500 mt-0.5 mr-3 flex-shrink-0'}) }}
                <div class="text-sm text-red-700 dark:text-red-200 leading-relaxed">
                    {{ "account.password.change_required"|trans|safe_html }}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="mb-6 bg-amber-50 dark:bg-amber-900/30 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
        <div class="flex items-start">
            {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-5 h-5 text-amber-400 dark:text-amber-500 mt-0.5 mr-3 flex-shrink-0'}) }}
            <div class="text-sm text-amber-700 dark:text-amber-200 leading-relaxed">
                {{ "account.password.help"|trans|safe_html }}
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    {{ form_errors(form) }}

    <div>
        {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
        {{ form_errors(form.password) }}
        {{ form_widget(form.password) }}
    </div>

    <div class="space-y-4">
        <div data-controller="password-strength"
             data-password-strength-strong-label-value="{{ "form.password-strong"|trans }}"
             data-password-strength-min-length-value="12"
             data-password-strength-min-length-label-value="{{ "form.password-min-length"|trans({'%min%': 12}) }}"
        >
            {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
            {{ form_errors(form.newPassword.first) }}
            {{ form_widget(form.newPassword.first, {'attr': {'data-password-strength-target': 'input', 'data-action': 'focus->password-strength#loadAndEvaluate:once input->password-strength#evaluate', 'autocomplete': 'new-password'}}) }}
            {# Password strength meter #}
            <div class="flex gap-1 mt-2" data-password-strength-meter aria-hidden="true">
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
                <div class="h-1 flex-1 rounded-full bg-gray-200 dark:bg-gray-600 transition-colors duration-300" data-password-strength-target="segment"></div>
            </div>
            <p class="text-xs text-gray-500 dark:text-gray-400 hidden mt-1" data-password-strength-target="feedback" aria-live="polite"></p>
        </div>

        {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 mt-4'}}) }}
        {{ form_widget(form.newPassword.second, {'attr': {'autocomplete': 'new-password'}}) }}
    </div>

    <div class="pt-4 flex items-center justify-between">
        {{ form_widget(form.submit) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
