{% extends 'base_page.html.twig' %}

{% block title %}{{ domain }} - {{ "account.twofactor.headline"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block page_title %}{{ "account.twofactor.headline"|trans }}{% endblock %}

{% block page_subtitle %}{{ "account.twofactor.lead"|trans }}{% endblock %}

{% block page_content %}
    <div class="max-w-6xl mx-auto">
        <div class="max-w-5xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Left column: 2FA Setup Form -->
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900/50 rounded-xl flex items-center justify-center mr-4">
                            <!-- Heroicon name: outline/exclamation-triangle -->
                            {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-6 h-6 text-yellow-600 dark:text-yellow-400'}) }}
                        </div>
                        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
                            {{ "account.twofactor.enable-title"|trans }}
                        </h2>
                    </div>

                    <p class="text-gray-600 dark:text-gray-300 mb-6">
                        {{ "account.twofactor.enable-description"|trans }}
                    </p>

                    <!-- Setup Form -->
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    {{ form_errors(form) }}

                    <div>
                        {{ form_label(form.password, null, {
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}
                        }) }}
                        {{ form_errors(form.password) }}
                        {{ form_widget(form.password, {
                            'attr': {
                                'placeholder': 'form.password'|trans,
                                'class': 'w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400 transition-colors duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100'
                            }
                        }) }}
                    </div>

                    <div class="pt-4">
                        {{ form_widget(form.submit, {
                            'attr': {
                                'class': 'w-full px-6 py-3 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors duration-200'
                            }
                        }) }}
                    </div>

                    {{ form_end(form) }}
                </div>

                <!-- Right column: Information -->
                {% include 'Account/_twofactor_info.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
