{% extends 'base_page.html.twig' %}

{% block title %}{{ domain }} - {{ "recovery-token.headline"|trans }}{% endblock %}

{% form_theme form 'Form/fields.html.twig' %}

{% block page_title %}{{ "recovery-token.headline"|trans }}{% endblock %}

{% block page_subtitle %}{{ "recovery-token.lead"|trans }}{% endblock %}

{% block page_content %}
    <div class="max-w-5xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Left column: Form or Token -->
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
                        {% if recovery_token is defined %}
                            <!-- Token display -->
                            <div class="mb-6">
                                <div class="flex items-center mb-2">
                                    <div class="w-10 h-10 bg-yellow-100 dark:bg-yellow-900/50 rounded-xl flex items-center justify-center mr-3">
                                        {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-5 h-5 text-yellow-600 dark:text-yellow-400'}) }}
                                    </div>
                                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
                                        {{ "recovery-token.created-headline"|trans }}
                                    </h3>
                                </div>
                                <p class="mb-3 text-sm text-gray-600 dark:text-gray-300">
                                    {{ "recovery-token.created-subtitle"|trans }}
                                </p>
                                <div class="bg-white dark:bg-gray-700 rounded border border-gray-200 dark:border-gray-600">
                                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 p-3">
                                        <code class="font-stretch-semi-condensed text-sm font-mono text-gray-900 dark:text-gray-100 break-all select-all min-w-0 flex-1">{{ recovery_token }}</code>                                            <button type="button"
                                                    class="inline-flex items-center p-2 text-xs font-medium text-gray-600 dark:text-gray-300 bg-gray-50 dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-md hover:bg-gray-100 dark:hover:bg-gray-500 hover:text-gray-900 dark:hover:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-700 transition-colors duration-200 self-end sm:self-auto flex-shrink-0"
                                                    data-button="copy-to-clipboard"
                                                    data-value="{{ recovery_token }}"
                                                    title="{{ "copy-to-clipboard"|trans }}"
                                                    aria-label="{{ "copy-to-clipboard"|trans }}">
                                                {{ ux_icon('heroicons:clipboard', {'class': 'w-4 h-4'}) }}
                                            </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Acknowledgment form -->
                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                            {{ form_errors(form) }}
                            {{ form_widget(form.recoveryToken) }}

                            <div class="flex items-start mt-4">
                                {{ form_widget(form.confirm, {
                                    'attr': {
                                        'class': 'h-5 w-5 text-blue-600 dark:text-blue-500 border-gray-300 dark:border-gray-600 rounded mt-0.5 mr-2 focus:ring-blue-500 dark:focus:ring-blue-400 bg-white dark:bg-gray-700'
                                    }
                                }) }}
                                {{ form_label(form.confirm, null, {
                                    'label_attr': {
                                        'class': 'text-sm text-gray-700 dark:text-gray-300'
                                    }
                                }) }}
                            </div>
                            {{ form_errors(form.confirm, {'attr': {'class': 'text-sm text-red-600 dark:text-red-400 mt-1'}}) }}

                            <div class="mt-6">
                                {{ form_widget(form.submit, {
                                    'attr': {
                                        'class': 'w-full px-6 py-3 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors duration-200'
                                    }
                                }) }}
                            </div>
                            {{ form_end(form) }}
                        {% else %}
                            <!-- Generate token form -->
                            {% if user.recoverySecretBox %}
                                <div class="bg-yellow-50 dark:bg-yellow-900/30 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4 mb-6">
                                    <div class="flex">
                                        {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-5 h-5 text-yellow-400 dark:text-yellow-500 mt-0.5 mr-3'}) }}
                                        <div class="text-sm text-yellow-800 dark:text-yellow-200">
                                            <p>{{ "recovery-token.set"|trans }}</p>
                                            <p class="mt-1">{{ 'recovery-token.set-extra'|trans }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
                                    <div class="flex">
                                        {{ ux_icon('heroicons:x-circle', {'class': 'w-5 h-5 text-red-400 dark:text-red-500 mt-0.5 mr-3'}) }}
                                        <div class="text-sm text-red-800 dark:text-red-200">
                                            {{ "recovery-token.unset"|trans }}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                            {{ form_errors(form) }}

                            <div>
                                {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                                {{ form_errors(form.password) }}
                                {{ form_widget(form.password, {
                                    'attr': {
                                        'placeholder': 'Password'|trans
                                    }
                                }) }}
                            </div>

                            <div class="pt-4">
                                {{ form_widget(form.submit, {
                                    'attr': {
                                        'class': 'w-full'
                                    }
                                }) }}
                            </div>

                            {{ form_end(form) }}
                        {% endif %}
                    </div>

                    <!-- Right column: Information -->
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
                        <div class="flex items-center mb-6">
                            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center mr-4">
                                {{ ux_icon('heroicons:information-circle', {'class': 'w-5 h-5 text-blue-600 dark:text-blue-400'}) }}
                            </div>
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{{ "openpgp.information"|trans }}</h2>
                        </div>

                        <div class="space-y-4 text-gray-700 dark:text-gray-300">
                            <p class="font-medium">{{ "recovery-token.created-info"|trans }}</p>
                            <hr class="my-4 border-gray-200 dark:border-gray-700" />
                            <p>{{ "recovery-token.displayed-once"|trans }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
