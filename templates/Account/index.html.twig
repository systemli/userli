{% extends 'base_page.html.twig' %}

{% if form is defined %}
    {% form_theme form 'Form/fields.html.twig' %}
{% endif %}
{% if password_form is defined %}
    {% form_theme password_form 'Form/fields.html.twig' %}
{% endif %}

{% block page_title %}{{ "index.title"|trans }}{% endblock %}

{% block page_subtitle %}{{ "start.intro"|trans }}{% endblock %}

{% block page_content %}

            {# Dashboard cards grid #}
            <div class="flex flex-wrap justify-center gap-6 max-w-7xl mx-auto">

                {# Webmail card #}
                {% set webmail_url = setting('webmail_url') %}
                {% if webmail_url is not empty %}
                    {% if webmail_url starts with 'https://' %}
                        {% set url = webmail_url | slice(8) %}
                    {% elseif webmail_url starts with 'http://' %}
                        {% set url = webmail_url | slice(7) %}
                    {% else %}
                        {% set url = webmail_url %}
                    {% endif %}
                    <div class="group w-80 flex-shrink-0">
                        <a href="https://{{ url|escape("url") }}"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="block bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-xl hover:border-blue-300 dark:hover:border-blue-600 transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
                           aria-describedby="webmail-desc">
                            <div class="p-6 text-center">
                                <div class="w-16 h-16 mx-auto mb-4 p-3 bg-blue-50 dark:bg-blue-900/50 rounded-xl group-hover:bg-blue-100 dark:group-hover:bg-blue-900 transition-colors duration-200">
                                    {{ ux_icon('heroicons:envelope', {class: 'w-full h-full text-blue-600 dark:text-blue-400'}) }}
                                </div>
                                <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200">
                                    {{ "start.webmail"|trans }}
                                </h2>
                                <p id="webmail-desc" class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
                                    {{ "start.webmail-desc"|trans }}
                                </p>
                            </div>
                        </a>
                    </div>
                {% endif %}

                {# Invite Codes card #}
                {% if domain == user_domain and not is_granted('ROLE_SUSPICIOUS') %}
                    <div class="group w-80 flex-shrink-0">
                        <a href="{{ path('vouchers') }}"
                           class="block bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-xl hover:border-green-300 dark:hover:border-green-600 transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
                           aria-describedby="vouchers-desc">
                            <div class="p-6 text-center">
                                <div class="w-16 h-16 mx-auto mb-4 p-3 bg-green-50 dark:bg-green-900/50 rounded-xl group-hover:bg-green-100 dark:group-hover:bg-green-900 transition-colors duration-200">
                                    {{ ux_icon('heroicons:gift', {class: 'w-full h-full text-green-600 dark:text-green-400'}) }}
                                </div>
                                <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors duration-200">
                                    {{ "start.vouchers"|trans }}
                                </h2>
                                <p id="vouchers-desc" class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
                                    {{ "start.vouchers-desc"|trans }}
                                </p>
                            </div>
                        </a>
                    </div>
                {% endif %}

                {# Aliases card #}
                <div class="group w-80 flex-shrink-0">
                    <a href="{{ path('aliases') }}"
                       class="block bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-xl hover:border-purple-300 dark:hover:border-purple-600 transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
                       aria-describedby="aliases-desc">
                        <div class="p-6 text-center">
                            <div class="w-16 h-16 mx-auto mb-4 p-3 bg-purple-50 dark:bg-purple-900/50 rounded-xl group-hover:bg-purple-100 dark:group-hover:bg-purple-900 transition-colors duration-200">
                                {{ ux_icon('heroicons:at-symbol', {class: 'w-full h-full text-purple-600 dark:text-purple-400'}) }}
                            </div>
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors duration-200">
                                {{ "start.aliases"|trans }}
                            </h2>
                            <p id="aliases-desc" class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
                                {{ "start.aliases-desc"|trans }}
                            </p>
                        </div>
                    </a>
                </div>

                {# Account Settings card #}
                <div class="group w-80 flex-shrink-0">
                    <a href="{{ path('account_settings') }}"
                       class="block bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-xl hover:border-gray-400 dark:hover:border-gray-500 transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
                       aria-describedby="account-desc">
                        <div class="p-6 text-center">
                            <div class="w-16 h-16 mx-auto mb-4 p-3 bg-gray-50 dark:bg-gray-700 rounded-xl group-hover:bg-gray-100 dark:group-hover:bg-gray-600 transition-colors duration-200">
                                {{ ux_icon('heroicons:cog-6-tooth', {class: 'w-full h-full text-gray-600 dark:text-gray-300'}) }}
                            </div>
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2 group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors duration-200">
                                {{ "start.account-settings"|trans }}
                            </h2>
                            <p id="account-desc" class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
                                {{ "start.account-settings-desc"|trans }}
                            </p>
                        </div>
                    </a>
                </div>
        </div>
    </div>
{% endblock %}
