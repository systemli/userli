{% if hasNotifications('password_compromised') %}
    <div class="mb-6 bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4" role="alert" aria-live="polite">
        <div class="flex items-start">
            {{ ux_icon('heroicons:exclamation-triangle', {'class': 'w-5 h-5 text-red-400 dark:text-red-500 mt-0.5 mr-3 flex-shrink-0'}) }}
            <div class="flex-1 text-sm text-red-700 dark:text-red-200 leading-relaxed">
                <p class="mb-3">
                    <strong class="font-semibold">{{ 'notifications.password_compromised.title'|trans }}:</strong>
                    {{ 'notifications.password_compromised.message'|trans }}
                </p>
                <div class="sm:inline-flex sm:items-center">
                    <a href="{{ path('account_password') }}"
                       class="inline-flex w-full sm:w-auto justify-center items-center px-3 py-1.5 rounded-md bg-red-600 dark:bg-red-500 text-white text-xs font-medium hover:bg-red-700 dark:hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors"
                    >{{ 'notifications.password_compromised.button'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endif %}
