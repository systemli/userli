# Authentication for userli

import_environment {
  USERLI_API_ACCESS_TOKEN=
  USERLI_HOST=
  DOVECOT_LUA_AGENT=
  DOVECOT_LUA_INSECURE=
  DOVECOT_LUA_MAX_ATTEMPTS=
  DOVECOT_LUA_TIMEOUT=
}

passdb lua {
  driver = lua
  lua_file = /usr/local/bin/userli-dovecot-adapter.lua
}

# The userdb below is used only by lda.
userdb lua {
  driver = lua
  lua_file = /usr/local/bin/userli-dovecot-adapter.lua
}
